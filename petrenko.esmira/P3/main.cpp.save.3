#include <iostream>
#include <fstream>
#include <string>

namespace petrenko
{
  take_file(std::string name, int num)
}

int petrenko::take_file(std::string name, int num)
{
  std::ifstream input(name);

  if (!input.is_open())
  {
    std::cout << "Error open file" << std::endl;
  }

  input.close();
  return 1;
}

int main(int argc, char ** argv)
{
  if (argc == 0)
  {
    std::cout << "Not enough arguments" << std::endl;
    return 1;
  }
  else if (argc > 5)
  {
    std::cout << "Too many arguments" << std::endl;
    return 1;
  }
  
  if (!isdigit(*argv[2])) 
  {
    std::cout << "First parameter is not a number" << std::endl;
    return 1;
  }
  int first_parm = atoi(argv[2]);
  if (first_parm > 2 || first_parm < 1)
  {
    std::cout << "First parameter is out of range" << std::endl;
    return 1;
  }

  std::string name_input = argv[3];
  petrenko::take_file(name_input, first_parm);
  return 0;
}
